<h1>FlowOverStack</h1>

<table> 
	<head> 
		<th></th>
		<th></th>
		<th>
			Question
		</th>
		<th>
			User
		</th>
		<th>
			Modified
		</th>
	</head>
	<body>
		<% @questions.each do |question| %>
		<tr>
			<td> Votes <%= question.votes.count %></td>
			<td> Answers <%= question.answers.count %></td>
			<td><%= link_to question.title, question %></td>
			<td><%= question.user.email %></td>
			<td><%= question.updated_at %></td>
			<% if user_signed_in? %> 
				<% if current_user.id == question.user.id %> 
				<td><%= link_to 'edit', edit_question_path(question) %></td>
				<% end %>
			<% end %>

		</tr>
		<% end %>
	</body>
</table>


<h2> <%= link_to 'new question', new_question_path %> </h2>

<% if user_signed_in? %>
<h2> <%= link_to 'log out', destroy_user_session_path, method: :delete %> </h2>
<% else %>
<h2> <%= link_to 'log in', new_user_session_path %> </h2>
<% end %>

